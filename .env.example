# FastAPI Finance Monitor - Environment Variables
# Скопируйте этот файл в .env и измените значения под свои нужды

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=True

# Data Update Settings
UPDATE_INTERVAL=30
MAX_CHART_POINTS=100
CACHE_TIMEOUT=10

# Technical Indicators
RSI_PERIOD=14
RSI_OVERBOUGHT=70.0
RSI_OVERSOLD=30.0

SMA_SHORT_PERIOD=20
SMA_LONG_PERIOD=50

EMA_FAST_PERIOD=12
EMA_SLOW_PERIOD=26

MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9

# API Settings
YAHOO_FINANCE_PERIOD=1d
YAHOO_FINANCE_INTERVAL=5m

COINGECKO_DAYS=7
COINGECKO_INTERVAL=hourly

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60

# CORS (разделяйте запятыми)
ALLOWED_ORIGINS=*

# Logging
LOG_LEVEL=INFO

# Redis (если используется)
# REDIS_URL=redis://localhost:6379/0

# Email Alerts (опционально)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# Telegram Alerts (опционально)
# TELEGRAM_BOT_TOKEN=your-bot-token
# TELEGRAM_CHAT_ID=your-chat-id

# API Keys (опционально, для платных сервисов)
# ALPHA_VANTAGE_KEY=your-key
# FINNHUB_KEY=your-key
# POLYGON_KEY=your-key